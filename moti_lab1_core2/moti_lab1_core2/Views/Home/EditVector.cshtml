
@{
}
<!doctype html>
<html>
<head>
    <title>Hello ASP.NET</title>
    <meta charset="utf-8" />
</head>
<body>
    <br />
    @if (ViewBag.alts.Count == 0 || ViewBag.marks.Count == 0)
    {
        <h1>Сначала добавьте альтернативы и оценки</h1>
    }
    else
    {
        <form method="post">
            <label>Название альтернативы:</label><br />
            <select asp-items="ViewBag.alts" name="ANum"></select><br /><br />
            <label>Название оценки:</label><br />
            <select asp-items="ViewBag.marks" name="MNum"></select><br /><br />
            <input type="submit" value="Отправить" />
        </form>
    }
</body>
</html>
