@model Mark
<!doctype html>
<html>
<head>
    <title>Hello ASP.NET</title>
    <meta charset="utf-8" />
</head>
<body>
    <br />
    @if (ViewBag.Select.Count == 0)
    {
        <h1>Сначала добавьте критерий</h1>
    }
    else
    {
        <form method="post" action="/Home/UpdateMark">
            <label>Название:</label><br />
            <input type="text" name="MName" value="@Model.MNAme" /><br /><br />
            <select asp-items="ViewBag.Select" name="CNum"></select><br /><br />
            <input type="hidden" name="MNum" value="@Model.MNum" />
            <input type="submit" value="Отправить" />
        </form>
    }
</body>
</html>